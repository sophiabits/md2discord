{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "noEmitOnError": true,
    "outDir": "dist",
    "sourceMap": true,
  },
  "include": ["src"],
  "ts-node": {
    "emit": false
  }
}
